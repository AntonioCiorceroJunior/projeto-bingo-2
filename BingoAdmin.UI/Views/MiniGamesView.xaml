<UserControl x:Class="BingoAdmin.UI.Views.MiniGamesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="20">
        <TabControl>
            <!-- Jogo do Bicho -->
            <TabItem Header="Jogo do Bicho">
                <Grid>
                    <!-- MODO CONFIGURAÇÃO -->
                    <Grid x:Name="SetupGrid_Bicho" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Configuração -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                            <TextBlock Text="Quantidade de Bichos (25-50):" VerticalAlignment="Center" FontWeight="Bold"/>
                            <TextBox x:Name="TxtQtdBichos" Width="60" Margin="10,0" Text="25" VerticalContentAlignment="Center" Padding="2"/>
                            <Button Content="GERAR JOGO" Click="BtnGerarBicho_Click" Padding="15,5" Background="#007ACC" Foreground="White"/>
                        </StackPanel>

                        <!-- Lista de Bichos -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="ItemsBicho">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#ddd" BorderThickness="1" Margin="5" Width="160" Background="White" CornerRadius="4">
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Foreground="#333"/>
                                                <TextBox Text="{Binding BuyerName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0" Padding="3" BorderBrush="#ccc"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Botão Confirmar -->
                        <Button Grid.Row="2" Content="CONFIRMAR SORTEIO" Click="BtnConfirmarBicho_Click" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="20,10" FontSize="16" Background="#28a745" Foreground="White"/>
                    </Grid>

                    <!-- MODO SORTEIO (VISUAL) -->
                    <Grid x:Name="DrawGrid_Bicho" Visibility="Collapsed" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ItemsControl x:Name="DrawItemsBicho">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="Card" BorderBrush="Gray" BorderThickness="1" Margin="3" CornerRadius="5" Background="White">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding BuyerName}" FontSize="12" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                            <Setter TargetName="Card" Property="Background" Value="#FFD700"/> <!-- Gold -->
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsWinner}" Value="True">
                                            <Setter TargetName="Card" Property="Background" Value="#28a745"/> <!-- Green -->
                                            <Setter TargetName="Card" Property="TextElement.Foreground" Value="White"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="VOLTAR" Click="BtnVoltarBicho_Click" Padding="20,10" Margin="0,0,20,0" Background="Gray" Foreground="White"/>
                            <Button x:Name="BtnRealizarSorteioBicho" Content="INICIAR SORTEIO" Click="BtnRealizarSorteioBicho_Click" Padding="20,10" FontSize="16" Background="#007ACC" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Jogo dos Nomes -->
            <TabItem Header="Jogo dos Nomes">
                <Grid>
                    <!-- MODO CONFIGURAÇÃO -->
                    <Grid x:Name="SetupGrid_Nomes" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Configuração -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Qtd. Participantes:" VerticalAlignment="Center" FontWeight="Bold"/>
                                <TextBox x:Name="TxtQtdNomes" Width="60" Margin="10,0" Text="50" VerticalContentAlignment="Center" Padding="2"/>
                                <Button Content="GERAR JOGO" Click="BtnGerarNomes_Click" Padding="15,5" Background="#007ACC" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBox x:Name="TxtNovoNome" Width="150" Margin="0,0,10,0" ToolTip="Novo Nome..." Padding="2"/>
                                <Button Content="Adicionar Nome" Click="BtnAdicionarNome_Click" Padding="10,5"/>
                            </StackPanel>
                        </Grid>

                        <!-- Lista de Nomes -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="ItemsNomes">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#ddd" BorderThickness="1" Margin="5" Width="180" Background="White" CornerRadius="4">
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Foreground="#555"/>
                                                <TextBox Text="{Binding BuyerName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0" Padding="3" BorderBrush="#ccc"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Botão Confirmar -->
                        <Button Grid.Row="2" Content="CONFIRMAR SORTEIO" Click="BtnConfirmarNomes_Click" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="20,10" FontSize="16" Background="#28a745" Foreground="White"/>
                    </Grid>

                    <!-- MODO SORTEIO (VISUAL) -->
                    <Grid x:Name="DrawGrid_Nomes" Visibility="Collapsed" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ItemsControl x:Name="DrawItemsNomes">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="8"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="Card" BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" Background="White">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding BuyerName}" FontSize="10" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                            <Setter TargetName="Card" Property="Background" Value="#FFD700"/> <!-- Gold -->
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsWinner}" Value="True">
                                            <Setter TargetName="Card" Property="Background" Value="#28a745"/> <!-- Green -->
                                            <Setter TargetName="Card" Property="TextElement.Foreground" Value="White"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="VOLTAR" Click="BtnVoltarNomes_Click" Padding="20,10" Margin="0,0,20,0" Background="Gray" Foreground="White"/>
                            <Button x:Name="BtnRealizarSorteioNomes" Content="INICIAR SORTEIO" Click="BtnRealizarSorteioNomes_Click" Padding="20,10" FontSize="16" Background="#007ACC" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
