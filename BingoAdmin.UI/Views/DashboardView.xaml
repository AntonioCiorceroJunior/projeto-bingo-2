<Page x:Class="BingoAdmin.UI.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BingoAdmin.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="DashboardView">

    <Grid Background="{DynamicResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Background="{DynamicResource DashboardHeaderBrush}" Padding="15" Effect="{DynamicResource DropShadowEffect}">
            <Grid>
                <TextBlock Text="Bingo Admin - Painel de Controle" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Grid.Column="0" Margin="10" BorderThickness="0" Background="Transparent">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0,0,0,3" BorderBrush="Transparent" Background="Transparent" Padding="12,8" Margin="0,0,5,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="{DynamicResource SubTextBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Configurar Bingo">
                <local:BingoConfigView/>
            </TabItem>
            <TabItem Header="Combos &amp; Cartelas">
                <local:CombosView/>
            </TabItem>
            <TabItem Header="Padrões">
                <local:PadroesView/>
            </TabItem>
            <TabItem Header="Jogar (Sorteio)">
                <local:GameView/>
            </TabItem>
            <TabItem Header="Desempate">
                <local:DesempateView/>
            </TabItem>
            <TabItem Header="Financeiro">
                <local:FinanceiroView/>
            </TabItem>
            <TabItem Header="Resultados">
                <local:ResultadosView/>
            </TabItem>
            <TabItem Header="Mini Games">
                <local:MiniGamesView/>
            </TabItem>
            <TabItem Header="Relatórios">
                <local:RelatoriosView/>
            </TabItem>
        </TabControl>

        <!-- Global Feed -->
        <Border Grid.Row="1" Grid.Column="1" Background="White" Margin="0,10,10,10" CornerRadius="5" Effect="{DynamicResource DropShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Timers -->
                    <RowDefinition Height="Auto"/> <!-- Recent Balls -->
                    <RowDefinition Height="Auto"/> <!-- Controls -->
                    <RowDefinition Height="*"/>    <!-- Feed List -->
                </Grid.RowDefinitions>
                
                <!-- Timers Section -->
                <Border Grid.Row="0" Background="#F0F7FF" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#EEE" CornerRadius="5,5,0,0">
                    <StackPanel>
                        <TextBlock Text="Status do Jogo" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" FontSize="14" Margin="0,0,0,10"/>
                        
                        <!-- Auto Draw Timer -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Próximo Sorteio:" Foreground="#666" FontSize="12"/>
                            <TextBlock Text="{Binding GameStatus.CurrentTimerText}" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" Grid.Column="1"/>
                        </Grid>
                        <ProgressBar Value="{Binding GameStatus.CurrentTimerProgress}" Height="4" Background="#E0E0E0" Foreground="{DynamicResource PrimaryBrush}" BorderThickness="0"/>
                        
                        <!-- Next Round Timer (Placeholder/Future) -->
                        <!-- 
                        <Grid Margin="0,10,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Próxima Rodada:" Foreground="#666" FontSize="12"/>
                            <TextBlock Text="{Binding GameStatus.NextRoundTimerText}" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" Grid.Column="1"/>
                        </Grid>
                        -->
                    </StackPanel>
                </Border>

                <!-- Recent Balls Section -->
                <Border Grid.Row="1" Background="White" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#EEE">
                    <StackPanel>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Últimos Sorteios" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" FontSize="12"/>
                                <TextBlock Text="{Binding GameStatus.CurrentBingoTitle}" Foreground="#666" FontSize="10" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                            <Border Background="{DynamicResource PrimaryBrush}" CornerRadius="3" Padding="4,1" VerticalAlignment="Top" Margin="5,0,0,0">
                                <TextBlock Text="{Binding GameStatus.CurrentRoundTitle}" Foreground="White" FontSize="9" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" PanningMode="HorizontalOnly">
                            <ItemsControl ItemsSource="{Binding GameStatus.RecentBalls}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5" CornerRadius="4" Padding="8,4" Margin="0,0,5,0" BorderBrush="#E0E0E0" BorderThickness="1">
                                            <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="#333" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Controls Section -->
                <Border Grid.Row="2" Background="#F9F9F9" Padding="10,5" BorderThickness="0,0,0,1" BorderBrush="#EEE">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Feed de Atividades" FontWeight="Bold" Foreground="{DynamicResource SubTextBrush}" FontSize="12" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <CheckBox Content="TV" IsChecked="{Binding GameStatus.IsFeedVisibleOnTv}" VerticalAlignment="Center" Margin="0,0,10,0" ToolTip="Mostrar Feed na TV"/>
                            <Button Content="Limpar" Click="BtnClearFeed_Click" FontSize="10" Padding="5,2" Margin="0,0,5,0" Background="Transparent" BorderBrush="#DDD"/>
                            <Button Content="Histórico" Click="BtnReloadHistory_Click" FontSize="10" Padding="5,2" Background="Transparent" BorderBrush="#DDD"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Feed List -->
                <ListBox Grid.Row="3" ItemsSource="{Binding FeedMessages}" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AlternationCount="2">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5" Margin="0,1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <!-- Zebra Striping -->
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=(ItemsControl.AlternationIndex)}" Value="1">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </DataTrigger>
                                            
                                            <!-- Type-based coloring -->
                                            <DataTrigger Binding="{Binding Type}" Value="Success">
                                                <Setter Property="Background" Value="#D4EDDA"/> <!-- Light Green -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="PedraMaior">
                                                <Setter Property="Background" Value="#FFF3CD"/> <!-- Light Yellow -->
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid MouseLeftButtonUp="FeedItem_MouseLeftButtonUp" Cursor="Hand">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Time -->
                                    <TextBlock Text="{Binding FormattedTime}" Foreground="#999" FontSize="11" Margin="0,2,10,0" VerticalAlignment="Top"/>
                                    
                                    <!-- Content -->
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" Margin="0,0,5,0" FontSize="12"/>
                                            <TextBlock Text="-" Foreground="#CCC" Margin="0,0,5,0"/>
                                        </StackPanel>
                                        
                                        <!-- Message Logic: Use TextTrimming if not expanded, TextWrapping if expanded -->
                                        <TextBlock Text="{Binding Message}" Foreground="{DynamicResource SubTextBrush}" FontSize="12" TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                    <Setter Property="MaxHeight" Value="36"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                            <Setter Property="TextTrimming" Value="None"/>
                                                            <Setter Property="MaxHeight" Value="Infinity"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Page>
