<Page x:Class="BingoAdmin.UI.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BingoAdmin.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="DashboardView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#007ACC" Padding="10">
            <TextBlock Text="Bingo Admin - Painel" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Configurar Bingo">
                <local:BingoConfigView/>
            </TabItem>
            <TabItem Header="Combos &amp; Cartelas">
                <local:CombosView/>
            </TabItem>
            <TabItem Header="Padrões">
                <local:PadroesView/>
            </TabItem>
            <TabItem Header="Configurar Rodadas">
                <local:RodadasConfigView/>
            </TabItem>
            <TabItem Header="Jogar (Sorteio)">
                <local:GameView/>
            </TabItem>
            <TabItem Header="Desempate">
                <local:DesempateView/>
            </TabItem>
            <TabItem Header="Financeiro">
                <local:FinanceiroView/>
            </TabItem>
            <TabItem Header="Resultados (Transparência)">
                <local:ResultadosView/>
            </TabItem>
            <TabItem Header="Mini Games">
                <local:MiniGamesView/>
            </TabItem>
            <TabItem Header="Relatórios">
                <local:RelatoriosView/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
