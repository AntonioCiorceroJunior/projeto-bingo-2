<Window x:Class="BingoAdmin.UI.Views.ConferenciaCartelaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ConferÃªncia de Cartela" Height="450" Width="400" WindowStartupLocation="CenterScreen" Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,20">
            <TextBlock x:Name="TxtTitulo" Text="CARTELA" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TxtDetalhes" Text="Dono: - | Combo: -" Foreground="Gray" FontSize="16" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="5" Padding="10" Background="White">
            <Grid x:Name="GridNumeros">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header B I N G O -->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Headers -->
                <TextBlock Text="B" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Foreground="#007ACC"/>
                <TextBlock Text="I" Grid.Row="0" Grid.Column="1" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Foreground="#007ACC"/>
                <TextBlock Text="N" Grid.Row="0" Grid.Column="2" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Foreground="#007ACC"/>
                <TextBlock Text="G" Grid.Row="0" Grid.Column="3" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Foreground="#007ACC"/>
                <TextBlock Text="O" Grid.Row="0" Grid.Column="4" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Foreground="#007ACC"/>

                <!-- Numbers will be added dynamically in code-behind -->
            </Grid>
        </Border>

        <Button Grid.Row="2" Content="Fechar" IsCancel="True" Margin="0,20,0,0" Height="40" Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>