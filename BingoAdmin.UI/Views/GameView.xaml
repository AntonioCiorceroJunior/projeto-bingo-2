<UserControl x:Class="BingoAdmin.UI.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BingoAdmin.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             TextOptions.TextFormattingMode="Display">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:MascaraToBrushCollectionConverter x:Key="MascaraToBrushConverter"/>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Top Bar -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Bingo:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="BingoSelector" Width="200" SelectionChanged="BingoSelector_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nome}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBlock Text="Rodada:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="RodadaSelector" Width="300" SelectionChanged="RodadaSelector_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DescricaoCompleta}" Foreground="{Binding TextColor}" FontWeight="Bold"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:Name="BtnNovaRodadaExtra" Content="+" Width="30" Click="BtnNovaRodadaExtra_Click" Margin="5,0,0,0" ToolTip="Criar Rodada Extra"/>
            
            <Button x:Name="BtnIniciar" Content="Iniciar Rodada" Click="BtnIniciar_Click" Margin="20,0,0,0" Padding="10,5" IsEnabled="False"/>
            <Button x:Name="BtnEncerrar" Content="Encerrar Rodada" Click="BtnEncerrar_Click" Margin="10,0,0,0" Padding="10,5" Background="#ffc107" Foreground="Black" Visibility="Collapsed"/>
            <Button x:Name="BtnReiniciar" Content="Reiniciar" Click="BtnReiniciar_Click" Margin="10,0,0,0" Padding="10,5" Background="#D9666F" Foreground="White" Visibility="Collapsed"/>
            <Button x:Name="BtnExcluirRodada" Content="Excluir Rodada" Click="BtnExcluirRodada_Click" Margin="10,0,0,0" Padding="10,5" Background="#8B0000" Foreground="White" Visibility="Collapsed"/>
            
            <!-- Flashboard Button -->
            <Button x:Name="BtnOpenFlashboard" Content="ðŸ“º Abrir Painel (TV)" Click="BtnOpenFlashboard_Click" Margin="20,0,0,0" Padding="10,5" Background="#B696EB" Foreground="White" ToolTip="Abrir janela para projetor/TV"/>
        </StackPanel>

        <!-- Game Area -->
        <Border Grid.Row="1" x:Name="GameArea" Visibility="Collapsed" CornerRadius="15" BorderThickness="2" Margin="0,10,0,0" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

            <!-- Left Panel: Controls & Current Number -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <Border BorderBrush="{DynamicResource HeaderBackgroundBrush}" BorderThickness="2" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Ãšltimo Sorteado" HorizontalAlignment="Center" FontSize="16" Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock x:Name="TxtUltimoNumero" Text="--" HorizontalAlignment="Center" FontSize="110" FontWeight="Bold" Foreground="{DynamicResource HeaderBackgroundBrush}"/>
                    </StackPanel>
                </Border>

                <Button x:Name="BtnSortear" Content="SORTEAR NÃšMERO" Click="BtnSortear_Click" Height="60" FontSize="20" FontWeight="Bold" Background="#5AB86F" Foreground="White" Margin="0,0,0,10"/>

                <!-- Auto Draw Controls -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Border Background="Transparent" ToolTip="Tempo de GeraÃ§Ã£o de NÃºmeros Sorteados" Cursor="Help" VerticalAlignment="Center">
                        <TextBlock Text="TGNS:" FontWeight="Bold"/>
                    </Border>
                    <TextBox x:Name="TxtTgns" Text="4" Width="40" Margin="5,0,5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextChanged="TxtTgns_TextChanged"/>
                    <TextBlock Text="seg" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <Button x:Name="BtnIniciarAuto" Content="â–¶ Iniciar" Click="BtnIniciarAuto_Click" Margin="0,0,5,0" Padding="10,2" Background="#5AB86F" Foreground="White"/>
                    <Button x:Name="BtnPausarAuto" Content="â¸ Pausar" Click="BtnPausarAuto_Click" Padding="10,2" Background="#ffc107" Foreground="Black" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="HistÃ³rico (Tempo Real):" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button x:Name="BtnCompartilharHistorico" Content="ðŸ“¤ Compartilhar" Click="BtnCompartilharHistorico_Click" Margin="10,0,0,0" Padding="5,2" FontSize="10" Background="#79BCE8" Foreground="White"/>
                </StackPanel>
                
                <ListBox x:Name="ListHistorico" Height="100" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,0,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="5" Width="60" Height="35" Margin="2">
                                <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="Ganhadores:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox x:Name="ListGanhadores" Height="150" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="PadrÃ£o da Rodada:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <CheckBox x:Name="ChkModoDinamicoRodada" Content="Modo DinÃ¢mico" Margin="10,0,0,0" VerticalAlignment="Center" Click="ChkModoDinamicoRodada_Click"/>
                    <CheckBox x:Name="ChkModoUnico" Content="Eliminar PadrÃ£o" Margin="10,0,0,0" VerticalAlignment="Center" ToolTip="Se marcado, o padrÃ£o ganho Ã© removido da rodada" Visibility="{Binding ElementName=ChkModoDinamicoRodada, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" Click="ChkModoUnico_Click"/>
                </StackPanel>
                
                <ComboBox x:Name="PatternSelector" Height="50" SelectionChanged="PatternSelector_SelectionChanged" ToolTip="Clique para alterar o padrÃ£o" MaxDropDownHeight="300">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Width="35" Height="35" Margin="0,0,10,0" Background="{DynamicResource InputBackgroundBrush}">
                                    <ItemsControl ItemsSource="{Binding Mascara, Converter={StaticResource MascaraToBrushConverter}}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="5" Columns="5"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Rectangle Fill="{Binding}" Margin="0.5"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                                <TextBlock Text="{Binding Nome}" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button x:Name="BtnConfigurarPadroes" Content="Configurar PadrÃµes" Click="BtnConfigurarPadroes_Click" Height="50" Margin="0,0,0,0" Visibility="Collapsed" Background="#5DADE2" Foreground="White" FontWeight="Bold"/>
            </StackPanel>

            <!-- Right Panel: Board -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Painel de NÃºmeros Sorteados" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Grid x:Name="BoardGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- B -->
                    <StackPanel Grid.Column="0" Margin="2">
                        <Border Background="{DynamicResource HeaderBackgroundBrush}" Padding="5" CornerRadius="5,5,0,0">
                            <TextBlock Text="B" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20"/>
                        </Border>
                        <ItemsControl ItemsSource="{Binding ColumnB}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="BoardItemBorder" Margin="1" CornerRadius="3" Background="{DynamicResource WindowBackgroundBrush}" Height="30">
                                        <TextBlock x:Name="BoardItemText" Text="{Binding Numero}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsDrawn}" Value="True">
                                            <Setter TargetName="BoardItemBorder" Property="Background" Value="Red"/>
                                            <Setter TargetName="BoardItemText" Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- I -->
                    <StackPanel Grid.Column="1" Margin="2">
                        <Border Background="{DynamicResource HeaderBackgroundBrush}" Padding="5" CornerRadius="5,5,0,0">
                            <TextBlock Text="I" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20"/>
                        </Border>
                        <ItemsControl ItemsSource="{Binding ColumnI}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="BoardItemBorder" Margin="1" CornerRadius="3" Background="{DynamicResource WindowBackgroundBrush}" Height="30">
                                        <TextBlock x:Name="BoardItemText" Text="{Binding Numero}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsDrawn}" Value="True">
                                            <Setter TargetName="BoardItemBorder" Property="Background" Value="Red"/>
                                            <Setter TargetName="BoardItemText" Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- N -->
                    <StackPanel Grid.Column="2" Margin="2">
                        <Border Background="{DynamicResource HeaderBackgroundBrush}" Padding="5" CornerRadius="5,5,0,0">
                            <TextBlock Text="N" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20"/>
                        </Border>
                        <ItemsControl ItemsSource="{Binding ColumnN}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="BoardItemBorder" Margin="1" CornerRadius="3" Background="{DynamicResource WindowBackgroundBrush}" Height="30">
                                        <TextBlock x:Name="BoardItemText" Text="{Binding Numero}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsDrawn}" Value="True">
                                            <Setter TargetName="BoardItemBorder" Property="Background" Value="Red"/>
                                            <Setter TargetName="BoardItemText" Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- G -->
                    <StackPanel Grid.Column="3" Margin="2">
                        <Border Background="{DynamicResource HeaderBackgroundBrush}" Padding="5" CornerRadius="5,5,0,0">
                            <TextBlock Text="G" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20"/>
                        </Border>
                        <ItemsControl ItemsSource="{Binding ColumnG}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="BoardItemBorder" Margin="1" CornerRadius="3" Background="{DynamicResource WindowBackgroundBrush}" Height="30">
                                        <TextBlock x:Name="BoardItemText" Text="{Binding Numero}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsDrawn}" Value="True">
                                            <Setter TargetName="BoardItemBorder" Property="Background" Value="Red"/>
                                            <Setter TargetName="BoardItemText" Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- O -->
                    <StackPanel Grid.Column="4" Margin="2">
                        <Border Background="{DynamicResource HeaderBackgroundBrush}" Padding="5" CornerRadius="5,5,0,0">
                            <TextBlock Text="O" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20"/>
                        </Border>
                        <ItemsControl ItemsSource="{Binding ColumnO}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="BoardItemBorder" Margin="1" CornerRadius="3" Background="{DynamicResource WindowBackgroundBrush}" Height="30">
                                        <TextBlock x:Name="BoardItemText" Text="{Binding Numero}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsDrawn}" Value="True">
                                            <Setter TargetName="BoardItemBorder" Property="Background" Value="Red"/>
                                            <Setter TargetName="BoardItemText" Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Overlay Encerrada -->
                    <Grid x:Name="OverlayEncerrada" Grid.ColumnSpan="5" Visibility="Collapsed" Panel.ZIndex="99">
                        <Grid.Background>
                            <SolidColorBrush Color="Black" Opacity="0.3"/>
                        </Grid.Background>
                        <Border VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFD700" BorderBrush="Black" BorderThickness="0,5" RenderTransformOrigin="0.5,0.5" Padding="50,10">
                            <Border.RenderTransform>
                                <RotateTransform Angle="-15"/>
                            </Border.RenderTransform>
                            <TextBlock Text="ENCERRADA" Foreground="Black" FontSize="48" FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
            </Grid>
        </Border>
    </Grid>
    </Border>
    </Grid>
    </ScrollViewer>
</UserControl>
