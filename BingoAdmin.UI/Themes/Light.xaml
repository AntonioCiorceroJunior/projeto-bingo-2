<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Cores Principais (Fluent Design) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0091F8"/> <!-- Azul mais claro e vibrante -->
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="White"/>
    
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#F3F3F3"/> <!-- Cinza claro para o fundo da janela -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/> <!-- Branco para os cartões -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F3F3F3"/>
    
    <!-- Textos -->
    <SolidColorBrush x:Key="TextBrush" Color="#202020"/>
    <SolidColorBrush x:Key="SubTextBrush" Color="#606060"/>
    
    <!-- Headers e Botões -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#0091F8"/>
    <SolidColorBrush x:Key="ButtonPrimaryBackground" Color="#0091F8"/>
    <SolidColorBrush x:Key="ButtonPrimaryForeground" Color="White"/>
    
    <!-- Inputs -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="InputTextBrush" Color="Black"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    
    <!-- Tabs -->
    <SolidColorBrush x:Key="TabItemHeaderBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="TabItemHeaderForeground" Color="#606060"/>
    <SolidColorBrush x:Key="TabItemSelectedBackground" Color="White"/>
    <SolidColorBrush x:Key="TabItemSelectedBorder" Color="#0091F8"/>

    <!-- Extras -->
    <SolidColorBrush x:Key="ExtraRoundBackgroundBrush" Color="#FFF8E1"/>
    
    <!-- Efeitos -->
    <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.1"/>
    <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
</ResourceDictionary>